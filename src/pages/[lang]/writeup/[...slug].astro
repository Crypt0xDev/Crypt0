---
import { getCollection } from 'astro:content';
import WriteupLayout from '../../../layouts/WriteupLayout.astro';
import TOC from '../../../components/common/TOC.astro';
import RelatedWriteups from '../../../components/writeup/RelatedWriteups.astro';
import { formatDate } from '../../../utils/helpers';
import { useTranslations } from '../../../utils/i18n';

export async function getStaticPaths() {
  const writeupEntries = await getCollection('writeups');
  return writeupEntries.map(entry => {
    // El slug viene como "es/htb/lame" o "en/vulnhub/brainpan"
    // Extraemos todo despu茅s del idioma
    const slugParts = entry.slug.split('/');
    const actualSlug = slugParts.slice(1).join('/'); // "htb/lame" o "vulnhub/brainpan"
    
    return {
      params: { lang: entry.data.lang, slug: actualSlug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const t = useTranslations(entry.data.lang as 'es' | 'en');

// Obtener writeups relacionados
const allWriteups = await getCollection('writeups', ({ data }) => {
  return data.lang === entry.data.lang;
});

const currentTags = entry.data.tags || [];
const currentPlatform = entry.data.platform;
const currentDifficulty = entry.data.difficulty;

// Buscar relacionados por similitud
const related = allWriteups
  .filter(w => w.slug !== entry.slug)
  .map(w => ({
    writeup: w,
    // Calcular score de similitud
    score: 
      (w.data.platform === currentPlatform ? 3 : 0) + // Misma plataforma
      (w.data.difficulty === currentDifficulty ? 2 : 0) + // Misma dificultad
      (w.data.tags?.filter(t => currentTags.includes(t)).length || 0) // Tags en com煤n
  }))
  .filter(({ score }) => score > 0)
  .sort((a, b) => {
    if (b.score !== a.score) return b.score - a.score;
    return new Date(b.writeup.data.pubDate).getTime() - new Date(a.writeup.data.pubDate).getTime();
  })
  .slice(0, 3)
  .map(({ writeup }) => writeup);

// Completar con writeups recientes si no hay suficientes
if (related.length < 3) {
  const remaining = allWriteups
    .filter(w => w.slug !== entry.slug && !related.includes(w))
    .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
    .slice(0, 3 - related.length);
  related.push(...remaining);
}

// Mapeo de colores por dificultad
const difficultyColors = {
  easy: '#10b981',
  medium: '#f59e0b',
  hard: '#ef4444',
  insane: '#8b5cf6'
};

// Mapeo de plataformas a nombres
const platformNames = {
  htb: 'HackTheBox',
  tryhackme: 'TryHackMe',
  vulnhub: 'VulnHub',
  hackmyvm: 'HackMyVM',
  portswigger: 'PortSwigger'
};
---

<WriteupLayout
  title={entry.data.title}
  description={entry.data.description}
  lang={entry.data.lang}
  image={entry.data.heroImage}
  pubDate={entry.data.pubDate}
  updatedDate={entry.data.updatedDate}
  platform={entry.data.platform}
  difficulty={entry.data.difficulty}
  os={entry.data.os}
  tags={entry.data.tags}
  retired={entry.data.retired}
>
  <article class="writeup-post">
    <header class="post-header">
      {entry.data.heroImage && (
        <div class="hero-image">
          <img src={entry.data.heroImage} alt={entry.data.title} />
        </div>
      )}
      
      <div class="post-meta-wrapper">
        <div class="breadcrumb">
          <a href={`/${entry.data.lang}/writeup`}>{t('writeups.title')}</a>
          <span class="separator">/</span>
          <a href={`/${entry.data.lang}/writeup/${entry.data.platform === 'htb' ? 'hackthebox' : entry.data.platform}`}>
            {platformNames[entry.data.platform] || entry.data.platform.toUpperCase()}
          </a>
        </div>

        <h1 class="post-title">{entry.data.title}</h1>
        
        <div class="post-badges">
          <span class="badge badge-platform" data-platform={entry.data.platform}>
            {platformNames[entry.data.platform] || entry.data.platform.toUpperCase()}
          </span>
          <span 
            class="badge badge-difficulty" 
            style={`background-color: ${difficultyColors[entry.data.difficulty]}20; color: ${difficultyColors[entry.data.difficulty]}; border: 1px solid ${difficultyColors[entry.data.difficulty]};`}
          >
            {entry.data.difficulty.charAt(0).toUpperCase() + entry.data.difficulty.slice(1)}
          </span>
          <span class="badge badge-os">
            {entry.data.os === 'linux' ? ' Linux' : entry.data.os === 'windows' ? ' Windows' : ' ' + entry.data.os}
          </span>
          {entry.data.retired && (
            <span class="badge badge-retired">
              {t('writeups.retired')}
            </span>
          )}
        </div>

        <div class="post-meta">
          <time datetime={entry.data.pubDate.toISOString()}>
            {formatDate(entry.data.pubDate, entry.data.lang)}
          </time>
          {entry.data.updatedDate && (
            <span class="updated">
              路 {t('blog.updated_on')}: {formatDate(entry.data.updatedDate, entry.data.lang)}
            </span>
          )}
          {entry.data.estimatedTime && (
            <span class="estimated-time">
              路 憋 {entry.data.estimatedTime}
            </span>
          )}
          {entry.data.points && (
            <span class="points">
              路  {entry.data.points} pts
            </span>
          )}
        </div>

        {/* Informaci贸n adicional */}
        {(entry.data.attackVectors || entry.data.certifications) && (
          <div class="additional-info">
            {entry.data.attackVectors && entry.data.attackVectors.length > 0 && (
              <div class="info-section">
                <strong>{entry.data.lang === 'es' ? 'Vectores de Ataque' : 'Attack Vectors'}:</strong>
                <div class="vectors">
                  {entry.data.attackVectors.map((vector) => (
                    <span class="vector-badge">{vector.replace('-', ' ')}</span>
                  ))}
                </div>
              </div>
            )}
            
            {entry.data.certifications && entry.data.certifications.length > 0 && (
              <div class="info-section">
                <strong>{entry.data.lang === 'es' ? 'Certificaciones' : 'Certifications'}:</strong>
                <div class="certs">
                  {entry.data.certifications.map((cert) => (
                    <span class="cert-badge">{cert}</span>
                  ))}
                </div>
              </div>
            )}

            {entry.data.vulnerabilities && entry.data.vulnerabilities.length > 0 && (
              <div class="info-section">
                <strong>{entry.data.lang === 'es' ? 'Vulnerabilidades' : 'Vulnerabilities'}:</strong>
                <div class="vulns">
                  {entry.data.vulnerabilities.map((vuln) => (
                    <span class="vuln-badge">{vuln}</span>
                  ))}
                </div>
              </div>
            )}
          </div>
        )}

        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="tags">
            {entry.data.tags.map((tag) => (
              <a 
                href={`/${entry.data.lang}/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                class="tag"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="post-content-wrapper">
      <div class="post-content">
        <Content />
      </div>

      <aside class="post-sidebar">
        <div class="toc-wrapper">
          {headings.length > 0 ? (
            <TOC headings={headings} title={t('writeups.table_of_contents')} inline={true} />
          ) : (
            <div class="no-toc">
              <h3>{t('writeups.table_of_contents')}</h3>
              <p>{entry.data.lang === 'es' ? 'No hay secciones' : 'No sections'}</p>
            </div>
          )}
        </div>
      </aside>
    </div>

    {related.length > 0 && (
      <aside class="related-section">
        <RelatedWriteups 
          writeups={related} 
          title={t('writeups.related_writeups')}
          lang={entry.data.lang}
        />
      </aside>
    )}
  </article>
</WriteupLayout>

