---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../utils/i18n';
import { formatDate, sortByDate, filterByLang } from '../../../utils/helpers';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');

// Obtener todos los CTF writeups
const allCtf = await getCollection('ctf');
const ctfWriteups = sortByDate(filterByLang(allCtf, lang as string));

// Categor√≠as de CTF
const ctfCategories = [
  {
    id: 'web',
    title: 'Web Exploitation',
    description: lang === 'es' ? 'Retos de explotaci√≥n web' : 'Web exploitation challenges',
    icon: 'üåê',
    color: '#4CAF50'
  },
  {
    id: 'pwn',
    title: 'Binary Exploitation',
    description: lang === 'es' ? 'Explotaci√≥n de binarios y pwn' : 'Binary exploitation and pwn',
    icon: 'üí•',
    color: '#F44336'
  },
  {
    id: 'crypto',
    title: 'Cryptography',
    description: lang === 'es' ? 'Retos de criptograf√≠a' : 'Cryptography challenges',
    icon: 'üîê',
    color: '#2196F3'
  },
  {
    id: 'forensics',
    title: 'Forensics',
    description: lang === 'es' ? 'An√°lisis forense digital' : 'Digital forensics analysis',
    icon: 'üîç',
    color: '#9C27B0'
  },
  {
    id: 'reversing',
    title: 'Reverse Engineering',
    description: lang === 'es' ? 'Ingenier√≠a inversa' : 'Reverse engineering',
    icon: '‚öôÔ∏è',
    color: '#FF9800'
  },
  {
    id: 'misc',
    title: 'Miscellaneous',
    description: lang === 'es' ? 'Retos diversos' : 'Miscellaneous challenges',
    icon: 'üéØ',
    color: '#607D8B'
  },
  {
    id: 'osint',
    title: 'OSINT',
    description: lang === 'es' ? 'Inteligencia de fuentes abiertas' : 'Open Source Intelligence',
    icon: 'üïµÔ∏è',
    color: '#00BCD4'
  },
  {
    id: 'stego',
    title: 'Steganography',
    description: lang === 'es' ? 'Esteganograf√≠a' : 'Steganography',
    icon: 'üñºÔ∏è',
    color: '#E91E63'
  }
];

// Contar CTF por categor√≠a
const categoryCounts = ctfCategories.map(cat => ({
  ...cat,
  count: ctfWriteups.filter(w => w.data.category === cat.id).length,
  difficulties: {
    easy: ctfWriteups.filter(w => w.data.category === cat.id && w.data.difficulty === 'easy').length,
    medium: ctfWriteups.filter(w => w.data.category === cat.id && w.data.difficulty === 'medium').length,
    hard: ctfWriteups.filter(w => w.data.category === cat.id && w.data.difficulty === 'hard').length,
    insane: ctfWriteups.filter(w => w.data.category === cat.id && w.data.difficulty === 'insane').length,
  }
}));

// Obtener CTFs √∫nicos
const uniqueCtfs = [...new Set(ctfWriteups.map(w => w.data.ctfName))];
const recentWriteups = ctfWriteups.slice(0, 6);
---

<Layout
  title={lang === 'es' ? 'CTF Writeups' : 'CTF Writeups'}
  description={lang === 'es' ? 'Writeups de retos de Capture The Flag' : 'Capture The Flag challenge writeups'}
  lang={lang}
>
  <main class="ctf-index">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">
          {lang === 'es' ? 'üö© CTF Writeups' : 'üö© CTF Writeups'}
        </h1>
        <p class="page-description">
          {lang === 'es' 
            ? 'Soluciones detalladas de retos de Capture The Flag de diversas competiciones' 
            : 'Detailed solutions for Capture The Flag challenges from various competitions'}
        </p>
        <div class="stats-bar">
          <div class="stat">
            <span class="stat-value">{ctfWriteups.length}</span>
            <span class="stat-label">{lang === 'es' ? 'Retos' : 'Challenges'}</span>
          </div>
          <div class="stat">
            <span class="stat-value">{uniqueCtfs.length}</span>
            <span class="stat-label">{lang === 'es' ? 'CTFs' : 'CTFs'}</span>
          </div>
          <div class="stat">
            <span class="stat-value">{ctfCategories.length}</span>
            <span class="stat-label">{lang === 'es' ? 'Categor√≠as' : 'Categories'}</span>
          </div>
        </div>
      </header>

      <section class="categories-section">
        <h2 class="section-title">
          {lang === 'es' ? 'üìÇ Categor√≠as' : 'üìÇ Categories'}
        </h2>
        <div class="category-grid">
          {categoryCounts.map((category) => (
            <a 
              href={`/${lang}/ctf/category/${category.id}`} 
              class="category-card"
              style={`--category-color: ${category.color}`}
            >
              <div class="category-header">
                <span class="category-icon">{category.icon}</span>
                <h3 class="category-title">{category.title}</h3>
              </div>
              <p class="category-description">{category.description}</p>
              <div class="category-stats">
                <div class="stat-item">
                  <span class="count">{category.count}</span>
                  <span class="label">{lang === 'es' ? 'retos' : 'challenges'}</span>
                </div>
                {category.count > 0 && (
                  <div class="difficulty-badges">
                    {category.difficulties.easy > 0 && (
                      <span class="badge easy">{category.difficulties.easy} easy</span>
                    )}
                    {category.difficulties.medium > 0 && (
                      <span class="badge medium">{category.difficulties.medium} medium</span>
                    )}
                    {category.difficulties.hard > 0 && (
                      <span class="badge hard">{category.difficulties.hard} hard</span>
                    )}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </section>

      {recentWriteups.length > 0 && (
        <section class="recent-section">
          <h2 class="section-title">
            {lang === 'es' ? 'üÜï Retos Recientes' : 'üÜï Recent Challenges'}
          </h2>
          <div class="writeups-grid">
            {recentWriteups.map((writeup) => (
              <a href={`/${lang}/ctf/${writeup.slug}`} class="writeup-card">
                {writeup.data.heroImage && (
                  <div class="writeup-image">
                    <img src={writeup.data.heroImage} alt={writeup.data.title} />
                  </div>
                )}
                <div class="writeup-content">
                  <div class="writeup-meta">
                    <span class="ctf-name">{writeup.data.ctfName}</span>
                    <span class={`difficulty-badge ${writeup.data.difficulty}`}>
                      {writeup.data.difficulty}
                    </span>
                  </div>
                  <h3 class="writeup-title">{writeup.data.title}</h3>
                  <p class="writeup-description">{writeup.data.description}</p>
                  <div class="writeup-footer">
                    <span class="category-tag">{writeup.data.category}</span>
                    {writeup.data.points && (
                      <span class="points">{writeup.data.points} pts</span>
                    )}
                    <time datetime={writeup.data.pubDate.toISOString()}>
                      {formatDate(writeup.data.pubDate, lang as 'es' | 'en')}
                    </time>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      {ctfWriteups.length === 0 && (
        <div class="empty-state">
          <span class="empty-icon">üìù</span>
          <h3>{lang === 'es' ? 'Pr√≥ximamente' : 'Coming Soon'}</h3>
          <p>
            {lang === 'es' 
              ? 'Estamos preparando writeups de CTF. ¬°Vuelve pronto!' 
              : 'We are preparing CTF writeups. Come back soon!'}
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  .ctf-index {
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--accent), var(--accent-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .page-description {
    font-size: 1.2rem;
    color: var(--text-muted);
    max-width: 700px;
    margin: 0 auto 2rem;
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .category-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    color: var(--text);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--category-color);
    transition: width 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border-color: var(--category-color);
  }

  .category-card:hover::before {
    width: 8px;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .category-icon {
    font-size: 2rem;
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .category-description {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .category-stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-item .count {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--category-color);
  }

  .stat-item .label {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .difficulty-badges {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .badge.easy {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
  }

  .badge.medium {
    background: rgba(255, 152, 0, 0.2);
    color: #FF9800;
  }

  .badge.hard {
    background: rgba(244, 67, 54, 0.2);
    color: #F44336;
  }

  .writeups-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .writeup-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: var(--text);
    transition: all 0.3s ease;
  }

  .writeup-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .writeup-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .writeup-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .writeup-content {
    padding: 1.5rem;
  }

  .writeup-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .ctf-name {
    font-size: 0.85rem;
    color: var(--accent);
    font-weight: 600;
  }

  .difficulty-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .difficulty-badge.easy {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
  }

  .difficulty-badge.medium {
    background: rgba(255, 152, 0, 0.2);
    color: #FF9800;
  }

  .difficulty-badge.hard {
    background: rgba(244, 67, 54, 0.2);
    color: #F44336;
  }

  .writeup-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .writeup-description {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .writeup-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .category-tag {
    padding: 0.25rem 0.75rem;
    background: var(--accent-bg);
    border-radius: 12px;
    font-size: 0.75rem;
  }

  .points {
    color: var(--accent);
    font-weight: 600;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-icon {
    font-size: 4rem;
    display: block;
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .stats-bar {
      gap: 1.5rem;
    }

    .category-grid,
    .writeups-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
